{
    "info": {
        "name": "Express People API",
        "description": "Collection for the in-memory CRUD API that uses Joi validation.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
        "version": "1.0.0"
    },
    "item": [
        {
            "name": "People",
            "item": [
                {
                    "name": "List people",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/people",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "people"
                            ]
                        }
                    }
                },
                {
                    "name": "Get person",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/people/:id",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "people",
                                ":id"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Create person",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"Jane Doe\",\n    \"email\": \"jane.doe@example.com\",\n    \"age\": 30\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/people",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "people"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Update person",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"Jane Doe Updated\",\n    \"age\": 31\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/people/:id",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "people",
                                ":id"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Delete person",
                    "request": {
                        "method": "DELETE",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/people/:id",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "people",
                                ":id"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:3333/api"
        }
    ]
}
